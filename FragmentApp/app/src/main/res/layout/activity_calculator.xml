<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".CalculatorActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/calculatorEnteredTextView"
                android:gravity="center|end"
                android:textColor="@color/calculatorFunctions"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_weight="10"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        <TextView
                android:id="@+id/calculatorFuncTextView"
                android:gravity="center|end"
                android:textColor="@color/calculatorFunctions"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_weight="10"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        <TextView
                android:id="@+id/calculatorTextView"
                android:gravity="center|end"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:padding="20dp"
                android:layout_weight="80"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="80"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_weight="90"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button android:textColor="@color/white"
                        android:background="@color/calculatorNumPad"
                        android:textSize="25sp"
                        android:text="7"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/calculatorButton7"
                        android:onClick="numPad"/>
                <Button android:textColor="@color/white"
                        android:background="@color/calculatorNumPad"
                        android:textSize="25sp"
                        android:text="8"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/calculatorButton8"
                        android:onClick="numPad"/>
                <Button android:textColor="@color/white"
                        android:background="@color/calculatorNumPad"
                        android:textSize="25sp"
                        android:text="9"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/calculatorButton9"
                        android:onClick="numPad"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button android:textColor="@color/white"
                        android:background="@color/calculatorNumPad"
                        android:textSize="25sp"
                        android:text="4"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/calculatorButton4"
                        android:onClick="numPad"/>
                <Button android:textColor="@color/white"
                        android:background="@color/calculatorNumPad"
                        android:textSize="25sp"
                        android:text="5"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/calculatorButton5"
                        android:onClick="numPad"/>
                <Button android:textColor="@color/white"
                        android:background="@color/calculatorNumPad"
                        android:textSize="25sp"
                        android:text="6"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/calculatorButton6"
                        android:onClick="numPad"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button android:textColor="@color/white"
                        android:background="@color/calculatorNumPad"
                        android:textSize="25sp"
                        android:text="1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/calculatorButton1"
                        android:onClick="numPad"/>
                <Button android:textColor="@color/white"
                        android:background="@color/calculatorNumPad"
                        android:textSize="25sp"
                        android:text="2"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/calculatorButton2"
                        android:onClick="numPad"/>
                <Button android:textColor="@color/white"
                        android:background="@color/calculatorNumPad"
                        android:textSize="25sp"
                        android:text="3"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/calculatorButton3"
                        android:onClick="numPad"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button android:textColor="@color/white"
                        android:background="@color/calculatorNumPad"
                        android:textSize="25sp"
                        android:text="."
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/calculatorButtonComma"
                        android:onClick="numPad"/>
                <Button android:textColor="@color/white"
                        android:background="@color/calculatorNumPad"
                        android:textSize="25sp"
                        android:text="0"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/calculatorButton0"
                        android:onClick="numPad"/>
                <Button android:textColor="@color/white"
                        android:background="@color/calculatorNumPad"
                        android:textSize="25sp"
                        android:text="="
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/calculatorButtonEquals"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <Button android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DEL"
                    android:textSize="20sp"
                    android:background="@color/calculatorFunctions"
                    android:textColor="@color/white"
                    android:id="@+id/calculatorButtonDelete"/>
            <Button android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="20sp"
                    android:background="@color/calculatorFunctions"
                    android:textColor="@color/white"
                    android:id="@+id/calculatorButtonDivide"
                    android:onClick="funcPad"/>
            <Button android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="20sp"
                    android:background="@color/calculatorFunctions"
                    android:textColor="@color/white"
                    android:id="@+id/calculatorButtonMultiply"
                    android:onClick="funcPad"/>
            <Button android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="20sp"
                    android:background="@color/calculatorFunctions"
                    android:textColor="@color/white"
                    android:id="@+id/calculatorButtonSum"
                    android:onClick="funcPad"/>
            <Button android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="20sp"
                    android:background="@color/calculatorFunctions"
                    android:textColor="@color/white"
                    android:id="@+id/calculatorButtonMinus"
                    android:onClick="funcPad"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>